{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "client: chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "cwd": "${fileWorkspaceFolder}/backend"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "server: nuxt",
      "outputCapture": "std",
      "cwd": "${fileWorkspaceFolder}/backend",
      "program": "${fileWorkspaceFolder}/backend/node_modules/nuxi/bin/nuxi.mjs",
      "args": ["dev"]
      // "runtimeArgs": ["--inspect-brk"]
    },
    {
      "type": "bun",
      "request": "launch",
      "name": "Debug Bun",
      "program": "${fileWorkspaceFolder}/backend/node_modules/nuxi/bin/nuxi.mjs",
      "args": ["dev"],
      "cwd": "${fileWorkspaceFolder}/backend",
      "env": {},
      "strictEnv": false,
      "watchMode": "hot",
      "stopOnEntry": false,
      "noDebug": false,
      "runtime": "/Users/loi/.bun/bin/bun",
      "runtimeArgs": ["--inspect-brk"]
    }
  ],
  "compounds": [
    {
      "name": "nuxt bun",
      "configurations": ["Debug Bun", "client: chrome"]
    },
    {
      "name": "nuxi server",
      "configurations": ["server: nuxt", "client: chrome"]
    }
  ]
}
